% layout 'default';
<h1 class="page-title">Riassunti</h1>
<section class="card">
  % if (stash('summaries') && scalar @{stash('summaries')}) {
  <ul>
      % for my $s (@$summaries) {
          <li>Pagina #<%= $s->{page_id} %>: <%= $s->{summary} %> (<%= $s->{created_at} %>)</li>
      % }
  </ul>
  % } else {
    <p style="color: var(--muted);">Nessun riassunto disponibile.</p>
  % }
</section>
