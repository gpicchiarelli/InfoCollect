% layout 'default';
<h1 class="page-title">Logs</h1>
<section class="card">
  <ul>
    % for my $l (@$logs) {
      <li>
        <div class="row">
          <div class="row-main">
            <strong>[<%= $l->{timestamp} %>]</strong>
            <span style="color:<%= $l->{level} eq 'ERROR' ? '#ff3b30' : '#34c759' %>"><%= $l->{level} %></span>
            â€” <%= $l->{message} %>
          </div>
        </div>
      </li>
    % }
  </ul>
</section>
